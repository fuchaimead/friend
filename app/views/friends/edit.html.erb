<h1> Editing <%= @friend.name %>'s  Information</h1>
<%= form_for @friend do |f| %> 
<%= f.label :name %>
<%= f.text_field :name, required: true %>
<br />
<%= f.label :age %>
<%= f.text_field :age %>
<br />
<%= f.label :hair_color %>
<%= f.text_field :hair_color %>
<br />
<%= f.label :eye_color %>
<%= f.text_field :eye_color %>
<br />
<%= f.label :phone %>
<%= f.text_field :phone %>
<br />
<%= f.label :alive %>
<%= f.select :alive, options_for_select(%w[yes no]) %>
<%= f.submit %> 
<% end %>
<%= link_to 'Cancel', friend_path(@friend) %>